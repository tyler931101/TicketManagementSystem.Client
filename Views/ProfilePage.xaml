<Page x:Class="TicketManagementSystem.Client.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:TicketManagementSystem.Client.ViewModels"
      Title="Profile">

    <Grid Background="{StaticResource BackgroundBrush}" Loaded="Page_Loaded">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="{StaticResource CardBrush}"
                    Padding="40"
                    Width="600"
                    CornerRadius="10"
                    BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="4" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Profile"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Current Avatar" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <Button BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1" Width="140" Height="140" 
                                Click="SelectAvatar_Click" Background="Transparent" Padding="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border x:Name="ImageBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                        </Border>
                                        <Border x:Name="HoverOverlay"
                                                Background="#7F000000"
                                                Opacity="0">
                                            <TextBlock Text="Change"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="HoverOverlay" Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Image Source="{Binding DisplayAvatar}" Stretch="UniformToFill"/>
                        </Button>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Upload"
                                    Command="{Binding UploadAvatarCommand}"
                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="35"
                                    Width="120"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2563EB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <TextBlock Text="{Binding AvatarFileName}" Margin="0,6,0,0" Foreground="{StaticResource TextBrush}" TextAlignment="Center"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,20" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Margin="0,0,10,0">
                            <TextBlock Text="Username" FontWeight="Bold" Margin="0,0,0,3"/>
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Height="35"
                                     Padding="8,6"
                                     BorderThickness="1"
                                     BorderBrush="#D1D5DB"
                                     Background="White"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Email" FontWeight="Bold" Margin="0,5,0,3"/>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Height="35"
                                     Padding="8,6"
                                     BorderThickness="1"
                                     BorderBrush="#D1D5DB"
                                     Background="White"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Phone" FontWeight="Bold" Margin="0,5,0,3"/>
                            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Height="35"
                                     Padding="8,6"
                                     BorderThickness="1"
                                     BorderBrush="#D1D5DB"
                                     Background="White"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Address" FontWeight="Bold" Margin="0,5,0,3"/>
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                     Height="35"
                                     Padding="8,6"
                                     BorderThickness="1"
                                     BorderBrush="#D1D5DB"
                                     Background="White"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Save Changes"
                                        Command="{Binding UpdateProfileCommand}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="35"
                                        Width="510"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Padding="12,0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                BorderThickness="0"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2563EB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <ProgressBar IsIndeterminate="True" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,0,0,15"
                                 Height="4"
                                 Background="#E5E7EB"
                                 Foreground="{StaticResource PrimaryBrush}"/>

                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{StaticResource TextBrush}"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
