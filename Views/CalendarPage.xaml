<Page x:Class="TicketManagementSystem.Client.Views.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Calendar">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource GlobalHeaderStyle}" BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <!-- Title Row -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image Source="../Resources/PageLinkIcons/calendar.png"
                            Style="{StaticResource GlobalHeaderIconStyle}"/>
                    <TextBlock Text="Schedule" Style="{StaticResource GlobalHeaderTitleStyle}"/>
                </StackPanel>
                
                <!-- Calendar Controls Row -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="View:" Style="{StaticResource GlobalHeaderLabelStyle}" Width="50"/>
                    <ComboBox x:Name="ViewComboBox"
                              Width="120" Margin="0,0,15,0" SelectedIndex="0"
                              Height="35"
                              Padding="8,6"
                              BorderThickness="1"
                              BorderBrush="#D1D5DB"
                              Background="White"
                              FontSize="14"
                              VerticalAlignment="Center">
                        <ComboBoxItem Content="Month"/>
                        <ComboBoxItem Content="Week"/>
                        <ComboBoxItem Content="Day"/>
                        <ComboBoxItem Content="Year"/>
                    </ComboBox>
                    
                    <TextBlock Text="Show:" Style="{StaticResource GlobalHeaderLabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0" Width="50"/>
                    <CheckBox x:Name="ShowTicketsCheckBox" Content="Tickets" VerticalAlignment="Center" Margin="0,0,15,0" IsChecked="True" FontSize="14"/>
                    <CheckBox x:Name="ShowTasksCheckBox" Content="Tasks" VerticalAlignment="Center" Margin="0,0,15,0" IsChecked="True" FontSize="14"/>
                    
                    <Button x:Name="TodayButton" Content="Today" 
                            Height="35"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="12,0"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="80" 
                            Margin="10,0,0,0"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    BorderThickness="0"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Calendar Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBarStyle}"/>
            </ScrollViewer.Resources>

            <Border Background="{StaticResource CardBrush}" Padding="15,12,15,12" Margin="10" BorderBrush="#D1D5DB" 
                    CornerRadius="8"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="4" Opacity="0.4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Calendar Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Previous Month Button -->
                            <Button Grid.Column="0" x:Name="PreviousMonthBtn" 
                                    Background="Transparent" BorderThickness="0"
                                    Padding="8" Margin="0,0,10,0"
                                    Cursor="Hand"
                                    Width="36" Height="36">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="◀" FontSize="16" Foreground="#6B7280"/>
                            </Button>
                            
                            <!-- Current Month/Year -->
                            <TextBlock Grid.Column="1" x:Name="CurrentMonthText" 
                                       Text="November 2025" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="#1F2937"/>
                            
                            <!-- Next Month Button -->
                            <Button Grid.Column="2" x:Name="NextMonthBtn" 
                                    Background="Transparent" BorderThickness="0"
                                    Padding="8" Margin="10,0,0,0"
                                    Cursor="Hand"
                                    Width="36" Height="36">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="▶" FontSize="16" Foreground="#6B7280"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Weekday Headers -->
                    <Border Grid.Row="1" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Sun" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#6B7280" Padding="10"/>
                            <TextBlock Grid.Column="1" Text="Mon" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#374151" Padding="10"/>
                            <TextBlock Grid.Column="2" Text="Tue" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#374151" Padding="10"/>
                            <TextBlock Grid.Column="3" Text="Wed" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#374151" Padding="10"/>
                            <TextBlock Grid.Column="4" Text="Thu" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#374151" Padding="10"/>
                            <TextBlock Grid.Column="5" Text="Fri" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#374151" Padding="10"/>
                            <TextBlock Grid.Column="6" Text="Sat" HorizontalAlignment="Center" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="#6B7280" Padding="10"/>
                        </Grid>
                    </Border>
                    
                    <!-- Calendar Days Grid -->
                    <Grid Grid.Row="2" x:Name="CalendarDaysGrid">
                        <!-- Grid definitions will be created dynamically in code -->
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>