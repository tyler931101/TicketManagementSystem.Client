<UserControl x:Class="TicketManagementSystem.Client.Shared.Controls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Background="{StaticResource PrimaryBrush}">
    
    <!-- Define only essential local resources -->
    <UserControl.Resources>
        <!-- Common values -->
        <Thickness x:Key="HeaderSideMargin">20,0</Thickness>
        <Thickness x:Key="DropdownMenuMargin">0,8</Thickness>
        
        <!-- Dropdown Menu Style -->
        <Style x:Key="DropdownMenuStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" 
                    Margin="{StaticResource HeaderSideMargin}">
            <Image Source="/TicketManagementSystem.Client;component/Resources/Images/slack.png"
                   Width="40" Height="40" Cursor="Hand" MouseDown="Logo_Click"/>
        </StackPanel>

        <!-- Profile Avatar (when logged in) -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center" 
                    Margin="{StaticResource HeaderSideMargin}">
            
            <!-- Profile Avatar Button -->
            <Button x:Name="ProfileDropdownButton" 
                    Style="{StaticResource AvatarButtonStyle}"
                    Click="ProfileDropdownButton_Click">
                <Ellipse Width="30" Height="30" 
                         Fill="#4F46E5" 
                         Stroke="White" 
                         StrokeThickness="2"/>
            </Button>
            
            <!-- Dropdown Menu -->
            <Popup x:Name="ProfileDropdownPopup" 
                   Placement="Bottom" 
                   PlacementTarget="{Binding ElementName=ProfileDropdownButton}"
                   VerticalOffset="10"
                   StaysOpen="False">
                <Border Style="{StaticResource DropdownMenuStyle}">
                    <StackPanel Margin="{StaticResource DropdownMenuMargin}">
                        <!-- Profile -->
                        <Button Style="{StaticResource DropdownMenuItemStyle}"
                                Command="{Binding NavigateProfileCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/TicketManagementSystem.Client;component/Resources/Images/profile.png"
                                       Width="20" Height="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Profile" FontSize="14" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Logout -->
                        <Button Style="{StaticResource DropdownMenuItemStyle}"
                                Command="{Binding LogoutCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/TicketManagementSystem.Client;component/Resources/Images/logout.png"
                                       Width="20" Height="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Logout" FontSize="14" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>
    </Grid>
</UserControl>