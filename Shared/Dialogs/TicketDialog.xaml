<Window x:Class="TicketManagementSystem.Client.Shared.Dialogs.TicketDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Ticket"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#F9FAFB" 
                    CornerRadius="12,12,0,0" 
                    Padding="20,15"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="DialogTitleText" 
                               Text="Create Ticket" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#111827"/>
                    
                    <Button HorizontalAlignment="Right"
                            Click="Cancel_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock Text="âœ•" FontSize="16" Foreground="#6B7280"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Title" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                    <TextBox x:Name="TitleBox" 
                             Height="40"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             FontSize="14"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                    <TextBox x:Name="DescriptionBox"
                             Height="100"
                             Padding="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             FontSize="14"
                             VerticalContentAlignment="Top"
                             TextChanged="DescriptionBox_TextChanged"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Due Date -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Due Date" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                        <DatePicker x:Name="DueDatePicker" 
                                    Height="40"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    FontSize="14"
                                    Padding="5,0"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Priority -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Priority" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                        <ComboBox x:Name="PriorityComboBox" 
                                  Height="40"
                                  BorderBrush="#D1D5DB"
                                  BorderThickness="1"
                                  FontSize="14"
                                  Padding="10,0"
                                  VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Low" Tag="Low"/>
                            <ComboBoxItem Content="Medium" Tag="Medium" IsSelected="True"/>
                            <ComboBoxItem Content="High" Tag="High"/>
                            <ComboBoxItem Content="Urgent" Tag="Urgent"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Assigned User -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Assigned To" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                    <ComboBox x:Name="AssignedUserComboBox" 
                              Height="40"
                              BorderBrush="#D1D5DB"
                              BorderThickness="1"
                              FontSize="14"
                              Padding="10,0"
                              VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,12,12" 
                    Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Background="White"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Width="100"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="CreateButton"
                            Content="Create"
                            Click="Create_Click"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Width="100"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>