<Window x:Class="TicketManagementSystem.Client.Shared.Dialogs.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    <Border Background="White"
            CornerRadius="12"
            BorderBrush="#E5E7EB"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#F9FAFB" 
                    CornerRadius="12,12,0,0" 
                    Padding="20,15"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="DialogTitleText" 
                               Text="Message" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#111827"/>
                    
                    <Button HorizontalAlignment="Right"
                            Click="CancelButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock Text="✕" FontSize="16" Foreground="#6B7280"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock x:Name="IconText" 
                           Grid.Column="0"
                           Text="ℹ️" 
                           FontSize="32" 
                           Margin="0,0,20,0" 
                           VerticalAlignment="Center"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText" 
                           Grid.Column="1"
                           Text="Message" 
                           FontSize="15" 
                           Foreground="#374151"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,12,12" 
                    Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Background="White"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Height="35"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="CancelButton_Click"
                            Visibility="Collapsed"
                            Cursor="Hand"
                            FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="OKButton" 
                            Content="OK" 
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Height="35"
                            Width="90"
                            Click="OKButton_Click"
                            Cursor="Hand"
                            FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>